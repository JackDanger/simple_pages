
<%= error_messages_for :simple_page %>

  <%  fields_for :simple_page do |f| %>
  
    <label>Filename:</label> <%= f.text_field :filename %> <br />
    <label>Page Title:</label> <%= f.text_field :title %> <br />
    <label>HTML Content:</label> <br />
    <%= f.text_area :content %> <br />
    <%= submit_tag :Save %>
  
  <%  end %>